{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/adminactuality.css">
{% endblock %}

{% block nav %}{% endblock %}

{% block content %}

    <h1 class="admin-title"> Tous les chiens </h1>
    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Sexe</th>
                    <th scope="col">Date de naissance</th>
                    <th scope="col">Statut</th>
                </tr>
            </thead>
            <tbody>
                {% for dog in dogs %}
                <tr>
                    <th scope="row">{{ dog.name }}</th>
                    <td>{{ dog.gender }}</td>
                    <td>{{ dog.birthday }}</td>
                    <td>{{ dog.dog_status }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block footer %}{% endblock %}
