{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/adminactuality.css">
    <link rel="stylesheet" href="/assets/css/adminNavBar.css">

{% endblock %}

{% block title %}Admin | Fiche {{actuality.name}}{% endblock %}
{% block nav %}{% include 'include/_adminNavBar.html.twig'%}{% endblock %}

    {% block content %}
        <div class="container">
            <ul class="alert alert-danger">
                {%- for error in errors -%}
                    <li>{{ error }}</li>
                {%- endfor -%}
            </ul>
            <h1 class="admin-title"> Modifier une actualité </h1>
            <form method="POST" action="">
                <div class="form-group">
                    <label for="title">Titre</label>
                    <input class="form-control" type="text" id="title" name="title" placeholder="Championnat de Chien de France" value="{{ actuality.title ?? '' }}" required>
                </div>
                <div class="form-group">
                    <label for="date">Date</label>
                    <input class="form-control" type="date" id="date" name="date" value="{{ actuality.date ?? '' }}" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" name="description" required>{{ actuality.description ?? '' }}</textarea>
                </div>
                <div class="d-flex justify-content-center ">
                    <button class="btn btn-lg submit-button ">Modifier l'actualité</button>
                    <a href="../list" class="btn btn-lg submit-button">Retour</a>
                </div>
            </form>
        </div>
    {% endblock %}

{% block footer %}{% endblock %}