{% extends 'layout.html.twig' %}
{% block title %}Admin | Liste des actualités{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/adminactuality.css">
    <link rel="stylesheet" href="/assets/css/adminNavBar.css">
{% endblock %}

{% block nav %}{% include 'include/_adminNavBar.html.twig'%}{% endblock %}

{% block content %}

    <h1 class="admin-title"> Toutes les actualités </h1>

    <div class="d-flex justify-content-center">
        <a href="/AdminActuality/add"
           title="Cliquez ici pour ajouter une actualité"
           class="btn btn-lg submit-button mb-5">Ajouter une actualité</a>
    </div>
    <div class="container">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Date</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for actuality in actualities %}
                <tr>
                    <th scope="row"><a href="show/{{ actuality.id }}" class="text-decoration-none">{{ actuality.title }}</a></th>
                    <td>{{ actuality.date }}</td>
                    <td><a href="edit/{{ actuality.id }}">Modifier</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block footer %}{% endblock %}