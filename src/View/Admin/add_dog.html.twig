{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/admindog.css">
{% endblock %}

{% block content %}

    <h1 class="admin-title"> Ajouter un chien </h1>

    <div class="container">
        <form action="" method="post">

            <ul class="form-errors">
                {% for error in errors %}
                    <li> {{ error }} </li>
                {% endfor %}
            </ul>

            <div class="form-group">
                <span >Catégorie :</span>
                {% for category in categories %}
                    <label for="age_category">{{ category.category }}</label>
                    <input type="radio" id="age_category" name="age_category" value="{{ category.id }}" required>
                {% endfor %}
            </div>

            <div class="form-group">
                <label for="status_select">Statut :</label>
                <select name="status_select" id="status_select" class="form-control" required>
                    <option value="">Choisir un statut</option>
                    {% for status in statuses %}
                        <option value="{{ status.id }}">{{ status.dog_status}}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label for="name">Nom du chien :</label>
                <input type="text" class="form-control" id="name" name="name" value="{{ dogData.name }}" required>
            </div>

            <div class="form-group">
                <label for="birthday">Date de naissance</label>
                <input type="date" class="form-control" id="birthday" name="birthday" value="{{ dogData.birthday }}" required>

            </div>

            <div class="form-group">
                <label for="picture">Ajouter une photo :</label>
                <input type="text" class="form-control" id="picture" name="picture" value="{{ dogData.picture }}" required>
            </div>

            <div class="form-group">
                <span>Sexe :</span>
                {% for gender in  genders %}
                    <label for="gender">{{ gender.gender }}</label>
                    <input type="radio" id="gender" name="gender" value="{{ gender.id }}" required>
                {% endfor %}
            </div>

            <div class="form-group">
                <label for="color_select">Couleur :</label>
                <select name="color_select" class="form-control" id="color_select" required>
                    <option value="">Choisir la couleur</option>
                    {% for color in colors %}
                        <option value="{{ color.id }}">{{ color.dog_color}}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label for="mother_select">Mère :</label>
                <select name="mother_select" class="form-control" id="mother_select">
                    <option value="">Choisir la mère</option>
                    {% for adultFemale in adultFemales %}
                        <option value="{{ adultFemale.id }}">{{ adultFemale.name}}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label for="father_select">Père :</label>
                <select name="father_select" class="form-control" id="father_select">
                    <option value="">Choisir le père</option>
                    {% for adultMale in adultMales %}
                        <option value="{{ adultMale.id }}">{{ adultMale.name}}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label for="chien_de_france">Lien Chien de France :</label>
                <input type="text" class="form-control" id="chien_de_france" name="chien_de_france" value="{{ dogData.chien_de_france }}">
            </div>

            <div class="form-group">
                <label for="lof_number">Identifiant LOF :</label>
                <input type="text" class="form-control" id="lof_number" name="lof_number" value="{{ dogData.lof_number }}">
            </div>

            <div class="form-group">
            <span>Test ADN :</span>

                <input type="radio" id="dna_test" name="dna_test" value="1">
                <label for="dna_test">Oui</label>
                <input type="radio" id="dna_test" name="dna_test" value="0">
                <label for="dna_test">Non</label>
            </div>

            <div class="form-group">
                <label for="description">Commentaires :</label>
                <textarea name="description" class="form-control" id="description" placeholder="Hune Passion est une puce très énergique...">{{ dogData.description }}</textarea>
            </div>

            <div class="d-flex justify-content-center ">
                <button class="btn btn-lg submit-button ">Ajouter le chien</button>
            </div>

        </form>
    </div>

{% endblock %}