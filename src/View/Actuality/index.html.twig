{% extends 'layout.html.twig' %}

{% block stylesheet %}<link rel="stylesheet" href="/assets/css/actuality.css">{% endblock %}

{% block title %}Actualités{% endblock %}



{% block content %}
    <div class="container">
    <h1 class="title"> Nos actualités </h1>
        <div class="row mt-5 mb-5">
        {% for actuality in actualities %}
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card">
                    <img src="https://via.placeholder.com/200 " class="card-img-top" alt="{{ actuality.title }}">
                        <div class="card-body">
                            <h2 class="card-title">{{ actuality.title }}</h2>
                            <p class="card-text">{{ actuality.date }}</p>
                            <a href="/actuality/show/{{ actuality.id }}" class="btn btn-primary">description de l'actualité</a>
                        </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}
